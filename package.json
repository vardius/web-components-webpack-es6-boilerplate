{
  "name": "web-components-webpack-es6-boilerplate",
  "version": "1.0.0",
  "description": "Web Components project starter using ES6 and Webpack",
  "main": "index.js",
  "scripts": {
    "clean:build": "rimraf build",
    "prebuild": "yarn run clean:build",
    "build": "yarn run build:client && yarn run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.config.production.js --progress",
    "build:server": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.config.server.js --progress",
    "build:serve": "http-server build/client -p 3003 --cors -o",
    "prestart": "yarn run clean:build",
    "start": "webpack-dashboard -- node ./bin/server.js",
    "test": "cross-env BABEL_ENV=commonjs jest --no-cache --config $(node jest.config.js)",
    "test:cov": "yarn test -- --coverage",
    "test:watch": "yarn test -- --watch",
    "lint": "eslint config src/** --ext .js",
    "tunnel": "lt --port 3000"
  },
  "author": {
    "name": "Rafa≈Ç Lorenz",
    "email": "vardius@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "6.23.0",
    "babel-runtime": "6.11.6",
    "cookie-parser": "1.4.3",
    "express": "4.14.0"
  },
  "devDependencies": {
    "@webcomponents/webcomponentsjs": "^1.0.1",
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.4.0",
    "babel-preset-stage-0": "^6.24.1",
    "bootstrap": "^3.3.7",
    "bootstrap-sass": "^3.3.7",
    "browserslist": "^2.1.2",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.1",
    "electron-to-chromium": "^1.3.10",
    "eslint": "^3.19.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "font-awesome": "^4.7.0",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "http-server": "^0.10.0",
    "jest": "^20.0.3",
    "jquery": "^3.2.1",
    "jsdom": "^11.0.0",
    "node-sass": "^4.5.2",
    "postcss-loader": "^1.3.3",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.17.0",
    "url-loader": "^0.5.8",
    "web-component": "^1.0.15",
    "webpack": "^2.4.1",
    "webpack-dashboard": "^0.4.0",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.5.4"
  }
}
